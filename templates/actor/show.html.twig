{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'name'|trans }}</th>
                <td>{{ actor.name }}</td>
            </tr>
            <tr>
                <th>{{ 'play-in'|trans }} :</th>
                {% for program in actor.programs %}
                <td>
                    <a href="{{ path('programs_show', {'slug': program.slug }) }}">{{ program.title }}</a>
                    </td>
                {% endfor %}
            </tr>
            <tr>
                <img class="align-self-start mr-3" src="/uploads/{{actor.picture}}" alt="{{ actor.name }} image">
            </tr>
        </tbody>
    </table>

    <a href="{{ path('actor_index') }}">{{ 'back-to-list'|trans }}</a>

    <a href="{{ path('actor_edit', {'id': actor.id}) }}">{{ 'update'|trans }}</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
