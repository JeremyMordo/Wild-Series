{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}
{% block body %}
        <div class="media">
                <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
                <div class="media-body">
                        <h2 class="mt-0">Episode {{ episode.number }} de la saison {{ season.number}} de {{ program.title }}</h2>
                        <h5>Description de l'épisode :</h5>
                        <p>{{ episode.summary }}</p>
                </div>
        </div>
        <a href="{{ path('app_index') }}">Retour à l'accueil</a>
{% endblock %}