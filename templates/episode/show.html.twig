{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ episode.summary }}</td>
            </tr>
        </tbody>
    </table>
    <h3> Liste des commentaires </h3>
{% for comment in comments %}
<table class="table">
    <tbody>
        <tr>
            <th>Commentaire de {{ comment.author.email }}</th>
            <td>{{comment.comment}}</td>
            <td>
                {% if is_granted("ROLE_ADMIN") or app.user is same as comment.author %}
                    <form method="post" action="{{ path('episode_deleteComment', {'slug' : comment.episode.slug, 'id': comment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this comment?');">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                    <button class="btn">Delete</button>
                    </form>        
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Note</th>
            <td>{{comment.rate}}/10</td>
        </tr>
    </tbody>
</table>
{% endfor %}
        {% if is_granted("ROLE_CONTRIBUTOR") %}
            {{ include('episode/_formcomment.html.twig') }}
        {% endif %}
    <a href="{{ path('episode_index') }}">back to list</a>

    <a href="{{ path('episode_edit', {'slug': episode.slug}) }}">edit</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
