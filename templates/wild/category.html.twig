{# templates/wild/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %} Catégorie {{ categoryName }}{% endblock %}

{% block body %}
        <h1>Toutes les séries de la catégorie {{ categoryName }} : </h1>
        {% for program in programsByCategory %}
                <h1 class="mt-0">{{ program.id }} / {{ program.title }}</h1>
                <p>{{ program.summary }}</p>
                <p>Catégorie : {{ program.category.name }}</p>
        {% else %}
                Aucune série trouvée.
        {% endfor %}
        <a href="{{ path('app_index') }}">
                Retour à l'accueil
        </a>
{% endblock %}