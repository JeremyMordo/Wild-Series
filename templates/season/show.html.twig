{% extends 'base.html.twig' %}

{% block title %}{{ 'season'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'season'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>{{ 'number'|trans }}</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>{{ 'year'|trans }}</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>{{ 'summary'|trans }}</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('season_index') }}">{{ 'season-home'|trans }}</a>

    <a href="{{ path('season_edit', {'id': season.id}) }}">{{ 'update'|trans }}</a>

    {{ include('season/_delete_form.html.twig') }}
{% endblock %}
